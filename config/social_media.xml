<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<settings>
	<!-- THIS IS THE CONFIG FILE FOR THE SOCIAL MEDIA PLUGIN -->
	<!-- DEFINE THE STANDARDS YOU WANT TO USE -->
	<!-- LOAD THE SETTINGS BY CHAT COMMAND /socialreload -->
	<widget>
		<height>15</height>							<!-- CHANGE THE HEIGHT OF ICON DISPLAY -->
		<width>15</width>							<!-- CHANGE THE WIDTH OF ICON DISPLAY -->
		<race>
			<pos_y>-20</pos_y>						<!-- VERTICAL RACE POSITION OF SLIDER -->
		</race>
		<score>
			<pos_y>-20</pos_y>						<!-- VERTICAL SCORE POSITION OF SLIDER -->
		</score>
					
		<icon_style>Icons128x128_1</icon_style>					<!-- STYLE OF SLIDER ICON -->
		<icon_substyle>Browse</icon_substyle>					<!-- ICON FOR THE SLIDER -->

		<background_style>BgsPlayerCard</background_style>
		<background_substyle>ProgressBar</background_substyle>

		<button_style>UIConstructionSimple_Buttons</button_style>
		<button_substyle>Item</button_substyle>
	</widget>

	<!-- ADD YOUR BUTTONS, MAX. AMMOUNT IS 10 -->
	<commands>
		<entry>
			<icon>http://maniacdn.net/ramires/uaseco/social-media/icons-default.png</icon> 				<!-- LINK TO YOUR ICON -->
			<icon_focus>http://maniacdn.net/ramires/uaseco/social-media/icons-default-focus.png</icon_focus> 	<!-- LINK TO YOUR FOCUS ICON, FOR NONE LEAVE EMPTY -->
			<url>https://www.google.de</url> 															<!-- URL TO FOLLOW UP WITH HTTP:// !! -->
		</entry>
		<!-- REMOVE THIS LINE TO ADD MORE ENTRIES OR COPY EXISTING ONE
		<entry>
			<icon>http://maniacdn.net/ramires/uaseco/social-media/icons-default.png</icon> 		
			<icon_focus>http://maniacdn.net/ramires/social-media/icons-default-focus.png</icon_focus> 	
			<url>https://discord.gg/wuWM7cZ</url> 	
		</entry>
		REMOVE THIS LINE TO ADD MORE ENTRIES OR COPY EXISTING ONE -->
	</commands>
</settings>
